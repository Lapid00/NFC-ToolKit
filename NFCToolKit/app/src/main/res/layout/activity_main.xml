<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F4F4F4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">


    <ImageView
        android:id="@+id/imageWelcomeText"
        android:layout_width="404dp"
        android:layout_height="23dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eraseNFC_fab"
        app:srcCompat="@drawable/logo_"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="211dp"
        android:layout_height="272dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="107dp"
        android:contentDescription="TODO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/container_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/main_add_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="32dp"
            android:clickable="true"
            android:src="@drawable/ic_baseline_add_24"
            android:text="Add Data"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="normal"
            app:icon="@drawable/ic_baseline_add_24"
            app:rippleColor="@color/colorPrimaryDark"
            android:focusable="true"
            android:contentDescription="TODO" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/eraseNFC_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:contentDescription="TODO"
        android:focusable="true"
        android:onClick="openErase"
        android:visibility="invisible"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/decodeNFC_fab"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_delete_forever_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/encodeNFC_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:contentDescription="TODO"
        android:focusable="true"

        android:onClick="openEncode"
        android:visibility="invisible"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/container_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_downward_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/decodeNFC_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:contentDescription="TODO"
        android:focusable="true"
        android:onClick="openDecode"
        android:visibility="invisible"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/encodeNFC_fab"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_upward_24" />


    <TextView
        android:id="@+id/eraseNFC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="@string/eraseNFC"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/eraseNFC_fab"
        app:layout_constraintEnd_toStartOf="@+id/eraseNFC_fab"
        app:layout_constraintTop_toTopOf="@+id/eraseNFC_fab" />

    <TextView
        android:id="@+id/encodeNFC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="@string/encodeNFC"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/encodeNFC_fab"
        app:layout_constraintEnd_toStartOf="@+id/encodeNFC_fab"
        app:layout_constraintTop_toTopOf="@+id/encodeNFC_fab" />

    <TextView
        android:id="@+id/decodeNFC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="@string/decodeNFC"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/decodeNFC_fab"
        app:layout_constraintEnd_toStartOf="@+id/decodeNFC_fab"
        app:layout_constraintTop_toTopOf="@+id/decodeNFC_fab" />


</androidx.constraintlayout.widget.ConstraintLayout>